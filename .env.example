# Gemini API Configuration
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# Optional: Default Model (gemini-1.5-flash | gemini-1.5-pro | gemini-pro-vision)
VITE_DEFAULT_MODEL=gemini-1.5-flash

# Optional: Max file size in MB
VITE_MAX_FILE_SIZE=10

# Google OAuth Configuration
VITE_GOOGLE_CLIENT_ID=your_google_oauth_client_id_here
VITE_FIREBASE_CONFIG={"apiKey":"your_api_key","authDomain":"your_project.firebaseapp.com","projectId":"your_project_id","storageBucket":"your_project.appspot.com","messagingSenderId":"123456789","appId":"your_app_id"}

# JWT Configuration (for backend)
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# Firebase Admin (for backend authentication verification)
FIREBASE_ADMIN_PRIVATE_KEY=your_firebase_admin_private_key_here
FIREBASE_ADMIN_CLIENT_EMAIL=your_service_account_email_here
FIREBASE_ADMIN_PROJECT_ID=your_project_id_here

# API Configuration
VITE_API_BASE_URL=http://localhost:3000

# Development vs Production
NODE_ENV=development
